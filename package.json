{
  "name": "todoai",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm exec turbo run build",
    "dev": "pnpm exec turbo run dev",
    "lint": "pnpm exec turbo run lint",
    "test": "pnpm exec turbo run test",
    "typecheck": "pnpm exec turbo run typecheck",
    "clean": "pnpm exec turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @todoai/db exec prisma generate",
    "db:push": "pnpm --filter @todoai/db exec prisma db push",
    "db:migrate": "pnpm --filter @todoai/db exec prisma migrate dev",
    "db:studio": "pnpm --filter @todoai/db exec prisma studio",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

