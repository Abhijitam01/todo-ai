{
  "name": "todoai",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm exec turbo run build",
    "dev": "pnpm exec turbo run dev",
    "lint": "pnpm exec turbo run lint",
    "test": "pnpm exec turbo run test",
    "typecheck": "pnpm exec turbo run typecheck",
    "clean": "pnpm exec turbo run clean && rm -rf node_modules",
    "db:generate": "cd packages/db && pnpm exec prisma generate",
    "db:push": "cd packages/db && pnpm exec prisma db push",
    "db:migrate": "cd packages/db && pnpm exec prisma migrate dev",
    "db:studio": "cd packages/db && pnpm exec prisma studio",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

